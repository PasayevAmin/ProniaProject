@using FrontToBack.Utilities.Enums;
@model LoginVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">SignIn Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>SignIN</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">SignIn</h4>
                            <div class="row">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                
                                <div class="col-md-12">
                                    <label asp-for="UserNameOrEmail">Username Or Email </label>
                                    <input asp-for="UserNameOrEmail" placeholder="Username Or Email" />
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password"  placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-12">
                                    <label asp-for="IsRemembered">Remember me</label>
                                    <input asp-for="IsRemembered" placeholder="Remember me" />
                                    <span asp-validation-for="IsRemembered" class="text-danger"></span>
                                </div>
                                
                               
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Sign In
                                    </button>
                                    <a class="text-info" style="padding-left:50px;" asp-action="register" asp asp-controller="account">You don't have an account yet</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>rVM userVM)