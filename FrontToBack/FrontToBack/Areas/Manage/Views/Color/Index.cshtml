@model DashboardVM
@{
    int count = 0;
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Color Table</h4>
                        <a asp-controller="color" asp-action="create" class="btn btn-success">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Products Count
                                        </th>
                                        <th>
                                            Settings

                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Colors)
                                    {
                                        count++;

                                        <tr>
                                            <td>
                                                @count
                                            </td>

                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.ProductColors.Count
                                            </td>
                                            <td>
                                                <a class="btn btn-warning btn-info"><i class="mdi mdi-border-color"></i></a>
                                                <a class="btn btn-danger btn-info"><i class="mdi mdi-delete-sweep"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-book-open-variant"></i></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
