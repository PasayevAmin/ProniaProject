@model UpdateProductVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Product</h4>

                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <img style="width:150;height:150;" src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true).ImageURL" />
                            </div>
                            <div class="form-group">
                                <label asp-for="MainPhoto">Main Image</label>
                                <input asp-for="MainPhoto" class="form-control">
                                <span asp-validation-for="MainPhoto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <img style="width:150;height:150;" src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==false).ImageURL" />
                            </div>
                            <div class="form-group">
                                <label asp-for="HoverPhoto">Hover Image</label>
                                <input asp-for="HoverPhoto" class="form-control">
                                <span asp-validation-for="HoverPhoto" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex">
                                @foreach (var item in Model.ProductImages.Where(x=>x.IsPrimary==null))
                                {
                                    <div class="position-relative">
                                        <img style="width:150;height:150;" src="~/assets/images/website-images/@item.ImageURL" />
                                        <input asp-for="ImageIds" type="hidden" value="@item.Id">
                                        <button style="right:0;" type="button" class="cus-delete btn btn-danger position-absolute"><i class="mdi mdi-close-box"></i></button>
                                    </div>
                                }
                            </div>
                            <div class="form-group">
                                <label asp-for="Photos">Images</label>
                                <input asp-for="Photos" class="form-control">
                                <span asp-validation-for="Photos" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" class="form-control" placeholder="Price">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SKU">SKU</label>
                                <input asp-for="SKU" class="form-control" placeholder="SKU">
                                <span asp-validation-for="SKU" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId" for="CategoryId">Category</label>
                                <select asp-for="CategoryId" class="form-control" id="CategoryId" asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))">
                                    <option disabled selected>Choose Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TagIds">Tags</label>
                                <select asp-for="TagIds" class="form-control" asp-items="new SelectList(Model.Tags,nameof(Tag.Id),nameof(Tag.Name))">
                                </select>
                                <span asp-validation-for="TagIds" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ColorIds">Colors</label>
                                <select asp-for="ColorIds" class="form-control" asp-items="new SelectList(Model.Colors,nameof(Color.Id),nameof(Color.Name))">
                                </select>
                                <span asp-validation-for="ColorIds" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SizeIds">Sizes</label>
                                <select asp-for="SizeIds" class="form-control" asp-items="new SelectList(Model.Sizes,nameof(Size.Id),nameof(Size.Name))">
                                </select>
                                <span asp-validation-for="SizeIds" class="text-danger"></span>
                            </div>



                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button asp-asp-controller="slide" asp-action="index" class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section DeleteImage{
<script>
    var btns=document.querySelectorAll(".cus-delete")
    btns.forEach(x => {
        x.addEventListener("click", function () {
            x.parentElement.remove();
        })
    })
</script>
}